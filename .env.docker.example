# ================================
# Docker Environment Configuration
# ================================
# Copy this file to .env.docker and fill in your actual values
# Do NOT commit .env.docker to git (it's in .gitignore)

# App Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Stripe (Required for Stripe payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# LemonSqueezy (Required for LemonSqueezy payments)
LEMONSQUEEZY_API_KEY=your_api_key_here
LEMONSQUEEZY_STORE_ID=your_store_id_here
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here
NEXT_PUBLIC_LEMONSQUEEZY_VARIANT_ID=your_variant_id_here

# Mailgun (Required for email sending)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_SIGNING_KEY=your_mailgun_signing_key

# Database (Automatically set by docker-compose for PostgreSQL)
# Override if using external database
DATABASE_URL=postgresql://devuser:devpass@postgres:5432/shipfreedev

# Optional: Disable Husky in Docker
HUSKY=0
